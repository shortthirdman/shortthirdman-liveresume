{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": ["node", "howler", "jasmine", "lodash", "chalk"],
	"baseUrl": "./",
	"paths": {
      "@liveresume/core": ["src/app/common/*"],
      "@liveresume/shared": ["src/app/shared/*"],
      "@liveresume/pages": ["src/app/pages/*"],
      "@liveresume/env": ["src/environments/*"]
    }
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.d.ts"
  ],
  "angularCompilerOptions": {
    "enableIvy": false,
	"allowEmptyCodegenFiles": true,
	"fullTemplateTypeCheck": false,
    "preserveWhitespaces": true
  }
}
