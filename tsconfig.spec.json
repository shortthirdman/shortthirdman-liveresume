{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": [
      "jasmine"
    ],
	"baseUrl": "./",
	"paths": {
      "@liveresume/core": ["src/app/common/*"],
      "@liveresume/shared": ["src/app/shared/*"],
      "@liveresume/pages": ["src/app/pages/*"],
      "@liveresume/env": ["src/environments/*"]
    }
  },
  "files": [
    "src/test.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts"
  ]
}
